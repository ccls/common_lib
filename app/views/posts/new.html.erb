<h1>New post</h1>

<%= form_for([@blog,@post]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :rows => 20, :cols => 40 %>
  </p>
<%= f.wrapped_yndk_select :position %>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', blog_posts_path(@blog) %>
