<h1>Editing post</h1>

<%= form_for(@post) do |f| %>
  <%= f.error_messages %>

<%= f.wrapped_yndk_select :position do %>
	<span>This is a test of the wrapped_* block methods </span>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :rows => 20, :cols => 40  %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>
<% end %>

<%= link_to 'Show', @post %> |
<%= link_to 'Back', blog_posts_path(@post.blog) %>
